<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-brand">
      <div class="footer-title">{{site.shortTitle}}</div>
      <div class="footer-meta">
        <span>Version {{site.version}}</span>
        <span class="sep" aria-hidden="true">·</span>
        <span>© {{year}} {{site.author}}</span>
      </div>
    </div>

    <div class="footer-links">
      <a href="{{site.repoUrl}}" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="{{site.npmUrl}}" target="_blank" rel="noopener noreferrer">npm</a>
      <a href="{{site.pathPrefix}}support/">Support</a>
    </div>
  </div>
</footer>
